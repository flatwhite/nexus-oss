<security>
    <version>2.0.1</version>
    <roles>
        <role>
            <id>ui-enterprise-ldap-admin</id>
            <name>UI: Enterprise LDAP Administrator</name>
            <description>Gives access to create and edit LDAP Servers.</description>
            <sessionTimeout>60</sessionTimeout>
            <privileges>
                <privilege>enterprise-ldap-create</privilege>
                <privilege>enterprise-ldap-read</privilege>
                <privilege>enterprise-ldap-update</privilege>
                <privilege>enterprise-ldap-delete</privilege>
            </privileges>
        </role>
    </roles>
   
    <privileges>
    
        <privilege>
            <id>enterprise-ldap-create</id>
            <type>method</type>
            <name>LDAP Enterprise (create,read)</name>
            <description>Give permission to create new LDAP Servers.</description>
            <properties>
                <property>
                    <key>method</key>
                    <value>create</value>
                </property>
                <property>
                    <key>permission</key>
                    <value>security:ldapconfig</value>
                </property>
            </properties>
        </privilege>
        <privilege>
            <id>enterprise-ldap-read</id>
            <type>method</type>
            <name>LDAP Enterprise (read)</name>
            <description>Give permission to read LDAP Server configurations.</description>
            <properties>
                <property>
                    <key>method</key>
                    <value>read</value>
                </property>
                <property>
                    <key>permission</key>
                    <value>security:ldapconfig</value>
                </property>
            </properties>
        </privilege>
        <privilege>
            <id>enterprise-ldap-update</id>
            <type>method</type>
            <name>LDAP Enterprise (update,read)</name>
            <description>Give permission to update LDAP Server configurations.</description>
            <properties>
                <property>
                    <key>method</key>
                    <value>update</value>
                </property>
                <property>
                    <key>permission</key>
                    <value>security:ldapconfig</value>
                </property>
            </properties>
        </privilege>
        <privilege>
            <id>enterprise-ldap-delete</id>
            <type>method</type>
            <name>LDAP Enterprise (delete,read)</name>
            <description>Give permission to delete LDAP Servers.</description>
            <properties>
                <property>
                    <key>method</key>
                    <value>delete,read</value>
                </property>
                <property>
                    <key>permission</key>
                    <value>security:ldapconfig</value>
                </property>
            </properties>
        </privilege>
        
    </privileges>
</security>